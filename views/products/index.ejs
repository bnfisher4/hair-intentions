<%- include('../partials/header') %>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Brand</th>
            <th>Kind</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(p) { %>
        <tr>
            <td>
                <img src="<%= p.img %>" alt="<%= p.brand %>"></br>
            </td>
            <td><%= p.brand %></td>
            <td><%= p.kind %></td>
            <td>
                <button>
                    <a href="/products/<%= p._id%>">Details</a>
                </button>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<%- include('../partials/footer') %>